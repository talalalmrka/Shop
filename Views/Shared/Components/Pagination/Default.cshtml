@model Shop.ViewComponents.PaginationViewComponent.PaginationModel

@if (Model.TotalPages > 1)
{
    <div class="flex justify-between px-2 py-3 text-sm">
        <div>
            صفحة @Model.CurrentPage من @Model.TotalPages
        </div>
        <nav class="inline-flex rounded-md" aria-label="Pagination">
            <!-- Previous -->
            @if (Model.CurrentPage > 1)
            {
                <a asp-area="@Model.Area" asp-controller="@Model.Controller" asp-action="@Model.Action"
                   asp-route-page="@(Model.CurrentPage - 1)"
                   class="px-3 py-2 border border-gray-300 text-gray-700 bg-white hover:bg-gray-100 rounded-s-md text-sm inline-flex items-center">
                    <i class="icon bi-chevron-right"></i>
                </a>
            }
            else
            {
                <span class="px-3 py-2 border border-gray-200 bg-gray-100 text-gray-400 rounded-s-md text-sm cursor-not-allowed">
                    <i class="icon bi-chevron-right"></i>
                </span>
            }

            <!-- Pages -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <span class="px-3 py-2 border border-primary bg-primary text-white text-sm -ms-px">@i</span>
                }
                else
                {
                    <a asp-area="@Model.Area" asp-controller="@Model.Controller" asp-action="@Model.Action"
                       asp-route-page="@i"
                       class="px-3 py-2 border border-gray-300 text-gray-700 bg-white hover:bg-gray-100 text-sm -ms-px">
                        @i
                    </a>
                }
            }

            <!-- Next -->
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a asp-area="@Model.Area" asp-controller="@Model.Controller" asp-action="@Model.Action"
                   asp-route-page="@(Model.CurrentPage + 1)"
                   class="px-3 py-2 border border-gray-300 text-gray-700 bg-white hover:bg-gray-100 -ms-px rounded-e-md text-sm inline-flex items-center">
                    <i class="icon bi-chevron-left"></i>
                </a>
            }
            else
            {
                <span class="px-3 py-2 border border-gray-200 bg-gray-100 text-gray-400 rounded-e-md -ms-px text-sm cursor-not-allowed">
                    <i class="icon bi-chevron-left"></i>
                </span>
            }
        </nav>
    </div>
}
