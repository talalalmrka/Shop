@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "الأدوار";
}
<div class="card">

    <div class="flex items-center gap-2 p-2">
        <a asp-area="Admin" asp-controller="Roles" asp-action="Create" class="btn btn-sky btn-xs">
            <i class="icon bi-plus-lg"></i>
            <span>إنشاء</span>
        </a>
    </div>
    <div class="table-container">
        <table class="table table-striped table-divide table-rounded sm">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" class="check-all" id="checkAll" />
                    </th>
                    <th>اسم الدور</th>
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <input type="checkbox" name="selected" value="@role.Id" class="check-item" />
                            </td>
                            <td>@role.Name</td>
                            <td>
                                <div class="flex items-center justify-center gap-2">
                                    <a asp-area="Admin" asp-controller="Roles" asp-action="Edit" asp-route-id="@role.Id"
                                        class="btn btn-xs btn-teal">
                                        <i class="icon bi-pencil-square"></i>
                                        <span>تعديل</span>
                                    </a>
                                    <form asp-area="Admin" asp-controller="Roles" asp-action="Delete" asp-route-id="@role.Id"
                                        method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-xs btn-red" onclick="return confirm('حذف؟')">
                                            <i class="icon bi-trash-fill"></i>
                                            <span>حذف</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">لايوجد عناصر</td>
                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>
                        <input type="checkbox" class="check-all" id="checkAll" />
                    </th>
                    <th>اسم الدور</th>
                    <th>إجراءات</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <vc:pagination current-page="@(ViewBag.CurrentPage)" total-pages="@(ViewBag.TotalPages)" action="Index"
        controller="Roles" area="Admin" />
</div>
