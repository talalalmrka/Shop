@model Shop.Models.UserViewModel
@{
    var isEdit = !string.IsNullOrEmpty(Model.Id);
    ViewData["Title"] = isEdit ? "تعديل" : "إنشاء";
    var action = isEdit ? "Edit" : "Create";
    var passwordRequired = isEdit ? "" : "required";
    var passwordLabel = isEdit ? "كلمة المرور (اختياري لتغييرها)" : "كلمة المرور";
}
<div class="card">
    <div class="flex items-center gap-2 p-2">
        <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-sky btn-xs">
            <i class="icon bi-arrow-right"></i>
            <span>عودة</span>
        </a>
        @if (isEdit)
        {
            <a asp-area="Admin" asp-controller="Users" asp-action="Create" asp-route-id="" class="btn btn-green btn-xs">
                <i class="icon bi-plus-lg"></i>
                <span>إضافة</span>
            </a>
        }

    </div>
    <div class="card-body">
        <form asp-action="@action" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="grid grid-cols-1 gap-4">

                <div class="col">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="form-control-error"></span>
                </div>
                <div class="col">
                    <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="form-control-error"></span>
                </div>
                <div class="col">
                    <label asp-for="Password" class="form-label">@passwordLabel</label>
                    <input asp-for="Password" class="form-control" passwordRequired />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="SelectedRole" class="form-label">الدور</label>
                    <select asp-for="SelectedRole" class="form-select" asp-items="@(new SelectList(Model.Roles))">
                        <option value="">-- Select Role --</option>
                    </select>
                    <span asp-validation-for="SelectedRole" class="form-control-error"></span>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-sky">حفظ</button>
                </div>
            </div>
        </form>
    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
