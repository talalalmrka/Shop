@* @model List<Microsoft.AspNetCore.Identity.IdentityUser> *@
@model List<Shop.Models.UserViewModel>
@{
    ViewData["Title"] = "المستخدمين";
}
<div class="card">
    <div class="flex items-center gap-2 p-2">
        <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-sky btn-xs">
            <i class="icon bi-plus-lg"></i>
            <span>إنشاء</span>
        </a>
    </div>
    <div class="table-container">
        <table class="table table-striped table-divide table-rounded xs">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" class="check-all" id="checkAll" />
                    </th>
                    <th>إسم المستخدم</th>
                    <th>البريد الإلكتروني</th>
                    <th>الأدوار</th>
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <input type="checkbox" name="selected" value="@user.Id" class="check-item" />
                            </td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.SelectedRole</td>
                            <td>
                                <div class="flex items-center justify-center gap-2">
                                    <a asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id"
                                        class="btn btn-xs btn-teal">
                                        <i class="icon bi-pencil-square"></i>
                                        <span>تعديل</span>
                                    </a>
                                    <form asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id"
                                        method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-xs btn-red" onclick="return confirm('حذف؟')">
                                            <i class="icon bi-trash-fill"></i>
                                            <span>حذف</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">لا يوجد عناصر</td>
                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>
                        <input type="checkbox" class="check-all" id="checkAll" />
                    </th>
                    <th>إسم المستخدم</th>
                    <th>البريد الإلكتروني</th>
                    <th>الأدوار</th>
                    <th>إجراءات</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <vc:pagination current-page="@(ViewBag.CurrentPage)" total-pages="@(ViewBag.TotalPages)" action="Index"
        controller="Users" area="Admin" />
</div>
