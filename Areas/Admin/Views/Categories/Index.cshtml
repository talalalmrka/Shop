@model List<Category>

@{
    ViewData["Title"] = "التصنيفات";
}
<div class="card">
    <div class="flex items-center gap-2 p-2">
        <a asp-area="Admin" asp-controller="Categories" asp-action="Create" class="btn btn-sky btn-xs">
            <i class="icon bi-plus-lg"></i>
            <span>إنشاء</span>
        </a>
    </div>
    <div class="table-container">
        <table class="table table-striped table-divide table-rounded xs">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" class="check-all" id="checkAll" />
                    </th>
                    <th>الصورة</th>
                    <th>الإسم</th>
                    <th>الوصف</th>
                    <th>عدد المنتجات</th>
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @if(Model.Any()){
                    @foreach (var category in Model){
                    <tr>
                        <td class="text-center">
                            <input type="checkbox" name="selected" value="@category.Id" class="check-item" />
                        </td>
                        <td>
                            @if(!string.IsNullOrEmpty(category.ImageUrl)){
                                <div class="relative w-40 rounded-2xl border overflow-hidden aspect-video">
                                    <img src="@Url.Content(category.ImageUrl)" alt="@category.Name">
                                </div>
                            }
                        </td>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>@(category.Products?.Count ?? 0)</td>
                        <td>
                            <div class="flex items-center justify-center gap-2">
                                <a asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id"
                                    class="btn btn-xs btn-teal">
                                    <i class="icon bi-pencil-square"></i>
                                    <span>تعديل</span>
                                </a>
                                <form asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id"
                                    method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-xs btn-red"
                                        onclick="return confirm('حذف؟')">
                                        <i class="icon bi-trash-fill"></i>
                                        <span>حذف</span>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
                }else{
                    <tr>
                        <td colspan="6" class="text-center">لا يوجد عناصر</td>
                    </tr>
                }
                
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        <input type="checkbox" class="check-all" id="checkAll" />
                    </th>
                    <th>الصورة</th>
                    <th>الإسم</th>
                    <th>الوصف</th>
                    <th>عدد المنتجات</th>
                    <th>إجراءات</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <vc:pagination
        current-page="@(ViewBag.CurrentPage)"
        total-pages="@(ViewBag.TotalPages)" 
        action="Index"
        controller="Categories"
        area="Admin" />
</div>
